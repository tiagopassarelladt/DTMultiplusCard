type TOperacao = (tpMult_DEBITO_A_VISTA, tpMult_DEBITO, tpMult_CREDITO, tpMult_CREDITO_A_VISTA, tpMult_CREDITO_PARC_LOJA, tpMult_CREDITO_PARC_ADM, tpMult_FROTA, tpMult_VOUCHER,
